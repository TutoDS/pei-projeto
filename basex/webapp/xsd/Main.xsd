<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
    targetNamespace="http://www.shop-compare.pt/shop">
    
    <xs:element name="shop" >
    <xs:complexType>
        <xs:sequence>
            <xs:element name="name" type="xs:string" />
